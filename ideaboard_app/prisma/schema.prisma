generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Idea {
  id        Int      @id @default(autoincrement())
  title     String
  category  String
  tags      String[]
  body      String
  // comments Comment @relation()
  // author    User      @relation(fields: [userId], references: [id])
  // userId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
  // comments  Comment[]
  user      User?    @relation(fields: [userId], references: [id])
  userId    String?
}

model User {
  id            String    @id @unique
  name          String
  email         String    @unique
  emailVerified Boolean
  createdAt     DateTime
  updatedAt     DateTime
  userImage     String    @default("none")
  role          Role      @default(USER)
  sessions      Session[]
  accounts      Account[]
  ideas         Idea[]

  // comments      Comment[]
  @@map("user")
}

model Session {
  id        String   @id @unique
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  token     String
  ipAddress String
  userAgent String
  expiresAt DateTime
  createdAt DateTime //@default(now())
  updatedAt DateTime

  @@map("session")
}

model Account {
  id         String   @id @unique
  user       User     @relation(fields: [userId], references: [id])
  userId     String
  accountId  String
  providerId String
  password   String
  createdAt  DateTime //@default(now())
  updatedAt  DateTime

  @@map("account")
}

model Verification {
  id         String   @id @unique
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime //@default(now())
  updatedAt  DateTime

  @@map("verification")
}

/**
 * model Comment {
 * id        Int      @id @default(autoincrement())
