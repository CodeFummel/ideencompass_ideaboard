generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Idea {
  id         Int       @id @default(autoincrement())
  title      String
  category   String
  tags       String[]
  body       String
  author     Session   @relation(fields: [authorId], references: [userId])
  authorId   String
  authorName String
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @default(now()) @updatedAt
  user       User?     @relation(fields: [userId], references: [id])
  userId     String?
  files      File[]
  likes      Like[]
  comments   Comment[]

  @@map("ideas")
}

model File {
  id     Int    @id @default(autoincrement())
  idea   Idea   @relation(fields: [ideaId], references: [id])
  ideaId Int
  name   String
  data   String

  @@map("files")
}

model User {
  id            String    @id @unique
  name          String
  email         String    @unique
  emailVerified Boolean
  createdAt     DateTime
  updatedAt     DateTime
  userImage     String    @default("none")
  role          Role      @default(USER)
  sessions      Session[]
  accounts      Account[]
  ideas         Idea[]
  likes         Like[]

  // comments      Comment[]
  @@map("users")
}

model Session {
  id        String    @id @unique
  user      User      @relation(fields: [userId], references: [id])
  userId    String    @unique
  token     String
  ipAddress String
  userAgent String
  expiresAt DateTime
  createdAt DateTime
  updatedAt DateTime
  ideas     Idea[]
  comments  Comment[]

  @@map("sessions")
}

model Account {
  id         String   @id @unique
  user       User     @relation(fields: [userId], references: [id])
  userId     String
  accountId  String
  providerId String
  password   String
  createdAt  DateTime
  updatedAt  DateTime

  @@map("accounts")
}

model Verification {
  id         String   @id @unique
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime
  updatedAt  DateTime

  @@map("verifications")
}

model Like {
  author    User   @relation(fields: [authorId], references: [id])
  authorId  String
  idea      Idea   @relation(fields: [likedIdea], references: [id])
  likedIdea Int

  @@id(name: "likeId", [authorId, likedIdea])
  @@map("likes")
}

model Comment {
  id          Int      @id @default(autoincrement())
  content     String
  reactions   String[]
  idea        Idea     @relation(fields: [commentedId], references: [id])
  commentedId Int
  author      Session  @relation(fields: [authorId], references: [id])
  authorId    String

  @@map("comments")
}

/**
 * model Category {
 * id       Int    @id @default(autoincrement())
 * category String
 * @@map("categorys")
 * }
 */
enum Role {
  USER
  LEAD
  ADMIN
}
