 * reactions String[]
 * idea      Idea     @relation(fields: [ideaId], references: [id])
 * ideaId    Int
 * author    User     @relation(fields: [userId], references: [id])
 * userId    String
 * @@map("comment")
 * }
 * model Category {
 * id       Int    @id @default(autoincrement())
 * category String
 * @@map("category")
 * }
 */
enum Role {
  USER
  LEAD
  ADMIN
}
